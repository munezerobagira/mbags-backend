{
  "name": "mybrand-backend",
  "author": "Sostene Munezero Bagira",
  "version": "1.0.0",
  "description": "A backend api made for sostene protofolio",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/index.js ",
    "build": "babel src --out-dir  dist/ --copy-files",
    "dev": "cross-env NODE_ENV=development nodemon --exec babel-node src/index.js ",
    "dev-freshdb": "cross-env NODE_ENV=development babel-node src/emptyDb && cross-env NODE_ENV=development babel-node src/createUser  && npm run dev && n",
    "test": "cross-env NODE_ENV=test mocha src/tests/**/*.test.js --exit --require @babel/register",
    "test-dev": "cross-env NODE_ENV=test mocha src/tests/**/*.test.js --exit --bail --require @babel/register",
    "coverage": "nyc --reporter=lcov --reporter=text-summary --reporter=text --reporter=html npm run test",
    "createUser": "cross-env NODE_ENV=development babel-node src/createUser.js"
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "bcrypt": "^5.0.1",
    "canvas": "^2.9.1",
    "chai-as-promised": "^7.1.1",
    "cloudinary": "^1.30.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.5",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "slugify": "^1.6.5",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.4.0",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.2",
    "@babel/node": "^7.18.9",
    "@babel/preset-env": "^7.18.2",
    "@babel/register": "^7.17.7",
    "@faker-js/faker": "^7.1.0",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.16",
    "nyc": "^15.1.0"
  }
}
